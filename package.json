{
  "name": "electron-vue-vuetify-ts-webpack-template",
  "version": "1.0.0",
  "description": "Template of electron, vue, vuetify, typescript and webpack.",
  "main": "./dist/main.js",
  "scripts": {
    "start": "electron .",
    "build": "webpack --config webpack.config.js",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "dev": "npm run build && npm run start"
  },
  "keywords": [],
  "author": "GrieferPig",
  "license": "ISC",
  "devDependencies": {
    "css-loader": "^6.6.0",
    "electron": "^17.1.0",
    "electron-builder": "^22.14.13",
    "lodash": "^4.17.21",
    "node-sass": "^7.0.1",
    "sass-loader": "^12.6.0",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.2.7",
    "typescript": "^4.6.2",
    "vue": "^3.2.31",
    "vue-loader": "^17.0.0",
    "vue-template-compiler": "^2.6.14",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "vue-style-loader": "^4.1.3"
  },
  "build": {
    "productName": "Never gonna give you up",
    "copyright": "All right reserved",
    "appId": "com.rick.ashley",
    "extends": null,
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "src/index.html"
    ],
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "src/asset/icon.ico"
    },
    "win": {
      "icon": "src/asset/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "src/asset/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "displayLanguageSelector": false,
      "multiLanguageInstaller": true,
      "installerLanguages": [
        "en_US",
        "zh_CN"
      ],
      "warningsAsErrors": false
    }
  }
}
